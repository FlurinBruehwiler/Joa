@using Joa.Hotkey
@using Microsoft.Extensions.DependencyInjection
@using Photino.Blazor
@inject JoaManager JoaManager 
@inject PhotinoBlazorApp PhotinoBlazorApp 

@if (_showSearch)
{
    <SearchComponent></SearchComponent>
}
else
{
    <p>Search not availablefd</p>
}

@code {
    private bool _showSearch = true;

    protected override void OnInitialized()
    {
        Program.MainWindow = PhotinoBlazorApp.MainWindow;

        PhotinoBlazorApp.MainWindow.SetSkipTaskbar(true);
        
        JoaManager.CurrentScope?.ServiceProvider
            .GetRequiredService<GlobalHotKey>()
            .InitialHotKeyRegistration(() =>
            {
                PhotinoBlazorApp.MainWindow.SetHidden(false);
                // PhotinoBlazorApp.MainWindow.SetWindowFocus(true);
                // PhotinoBlazorApp.MainWindow.SetTopZ(true);
            });

        JoaManager.ShowUi = async showUi =>
        {
            await InvokeAsync(() =>
            {
                _showSearch = showUi;
                StateHasChanged();
            });
        };

        base.OnInitialized();
    }
}
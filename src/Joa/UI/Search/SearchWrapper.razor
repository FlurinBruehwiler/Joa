@using Joa.Hotkey
@using Microsoft.Extensions.DependencyInjection
@using Photino.Blazor
@inject JoaManager JoaManager 
@inject PhotinoBlazorApp PhotinoBlazorApp 

@if (_showSearch)
{
    <SearchComponent></SearchComponent>
}
else
{
    <p>Search not availablefd</p>
}

@code {
    private bool _showSearch = true;

    protected override void OnInitialized()
    {
        JoaManager.CurrentScope?.ServiceProvider
            .GetRequiredService<HotKeyService>()
            .InitialHotKeyRegistration(() => PhotinoBlazorApp.MainWindow.SetMaximized(true));

        JoaManager.ShowUi = async showUi =>
        {
            await InvokeAsync(() =>
            {
                _showSearch = showUi;
                StateHasChanged();
            });
        };

        base.OnInitialized();
    }
}
@using Joa.Hotkey
@using Photino.Blazor
@inject JoaManager JoaManager 
@inject PhotinoBlazorApp PhotinoBlazorApp 

@if (_showSearch)
{
    <SearchComponent></SearchComponent>
}
else
{
    <p>Search not availablefd</p>
}

@code {
    private bool _showSearch = true;

    protected override void OnInitialized()
    {
        HotKeyHelper.RegisterHotKey(() => PhotinoBlazorApp.MainWindow.SetMaximized(true), Key.P, Modifier.Alt);

        JoaManager.ShowUi = async showUi =>
        {
            await InvokeAsync(() =>
            {
                _showSearch = showUi;
                StateHasChanged();
            });
        };

        base.OnInitialized();
    }
}
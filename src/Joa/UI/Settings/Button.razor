@using Joa.Injectables
@implements IDisposable

<button
    @onclick="async () => await OnClick.InvokeAsync()" class="text-[15px] text-white @Color px-[15px] h-[35px] rounded-[4px]">
    @Text
</button>

@code
{
    [Parameter]
    public string? Color { get; set; } = "bg-c-300";

    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    public void Dispose()
    {
        JoaLogger.GetInstance().Info("Disposing Button");
        Color = null;
        Text = null;
        OnClick = EventCallback.Empty;
    }
}

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>Joa.Api</PackageId>
        <Version>1.0.0</Version>
        <Authors>Flurin Bruehwiler</Authors>
        <Company>JoaLauncher</Company>
        <Product>Joa</Product>
        <PackageLicenseUrl>MIT</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/FlurinBruehwiler/Joa</RepositoryUrl>
        <Description>
            The package used to develop plugins for Joa
        </Description>
        <RootNamespace>JoaLauncher.Api</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FlurinBruehwiler.Helpers" Version="1.1.0" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
      <PackageReference Include="Nerdbank.GitVersioning" Version="3.5.119" PrivateAssets="all">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>
    
</Project>
